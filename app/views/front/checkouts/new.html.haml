-content_for :title do
  ='Checkout'
  
-content_for :javascript_after_init do
  :javascript
    $(function(){
      new Tix.Routers.FrontCheckoutRouter();
    });
  
.row  
  .span6
  
    -unless user_signed_in?
      .sign-in
        =render 'front/checkouts/sign_in'
      .register.hide
        =render 'front/checkouts/register'
        
    -else
      %h1 Payment
      !="Signed in as <strong>#{@current_user.full_name}</strong> (#{@current_user.email}</strong>)"
      
      =render 'front/checkouts/payment'

    .step3.step.payment.hide
     
  .span6
  
    -if flash[:message]  
      .alert.errors
        =flash[:message]

    -if flash[:error]
      .alert.errors
        %ul
          -flash[:error].full_messages.each do |message|
            %li=message
              
    =render :partial => 'front/checkouts/cart', :locals => {:current_order => @current_order}
              
