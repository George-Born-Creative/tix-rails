.row  
  .span6
    =form_tag '/checkout', :method => 'post' do
      .row
        .span6
          %h2 Your Information
      
          %hr/
        .span2=text_field_tag 'user[first_name]', attr_or_nil(:user_first_name), :placeholder =>  'first name'
        .span2=text_field_tag 'user[last_name]', attr_or_nil(:user_last_name), :placeholder =>  'last name'
        .span2=text_field_tag 'user[email]', attr_or_nil(:user_email), :placeholder =>  'email'
      
      
      %h2 Billing Address
      %hr/
      .row
        .span3=text_field_tag 'address[address_line_1]', attr_or_nil(:address_line_1), :placeholder =>  'address 1'
        .span3=text_field_tag 'address[address_line_2]', attr_or_nil(:address_line_2), :placeholder =>  'address 2'
      .row
        .span2=text_field_tag 'address[city]', attr_or_nil(:address_city), :placeholder =>  'city',  :size => 15
        .span2=text_field_tag 'address[state]', attr_or_nil(:address_state), :placeholder => 'state', :size => 3
        .span2=text_field_tag 'address[zip]', attr_or_nil(:address_zip), :placeholder => 'zip',  :size => 15
    
      %h2 Credit Card Information
      %hr
      .row
        .span3=text_field_tag 'credit_card[card_number]', attr_or_nil(:card_number), :placeholder =>  'credit card number'
        .span2=text_field_tag 'credit_card[expiration]', attr_or_nil(:card_expiration), :placeholder =>  'expiration date (mm/yyyy)'
        -#.span2=date_select( 'credit_card', 'expires', :discard_day => true, |
        -#    :start_year => Date.today.year, :end_year => (Date.today.year+10), |
        -#    :order => [:month, :year], :add_month_numbers => true) 
        .span1=text_field_tag 'credit_card[cvv]', attr_or_nil(:card_cvv), :placeholder =>  'cvv'
      
      %hr/
      =submit_tag 'Place Order Â»', :class => 'btn btn-large', :style => 'font-size: 22px; padding: 8px'
  
  .span6
    
    
    -if flash[:error]
      .span6
        .alert.errors
          =flash[:message]
          %ul
            -flash[:error].full_messages.each do |message|
              %li=message
              
    =render :partial => 'front/checkouts/cart', :locals => {:current_order => @current_order}
              


