-content_for :title do
  =@page.title.titleize

-content_for :content_nine do
  -if @page.slug == 'home'
    =raw render_shortcodes('[carousel name=&quot;home&quot;]')
    
  -if @page && @page.body
    =raw render_shortcodes( @page.body )
    %br/
  
  
=content_for :sidebar do 
  -if  @page && @page.slug == 'home'
  
    .today
      =image_tag('http://s3.amazonaws.com/thintix_production/jamminjava/ckeditor/pictures/data/000/000/050/medium/today-1.png?1351803066',  width: '100%')
      .set-times
        -@current_account.events.today.order('starts_at DESC').each do |event|
          %strong=link_to event.name, front_event_path(event)
          %br/
          =event.set_times_formatted.html_safe unless event.set_times.blank?
          %br/
    %br/
    
  =render :partial => 'sidebars/sidebar', :locals => {:sidebar => @page.sidebar}
