.row
  .span5
    =image_tag( @image.file(:original), :style => 'float: right' )
  .span7
    %input{:type => "text", :value => @image.file, :style => 'width: 100%'}
  
    = link_to 'Edit', edit_image_path(@image), :class => 'btn'
    = link_to 'All Images', images_path, :class => 'btn'

    .well
      %h3=@image.title
      =@image.caption
      %hr
  
      %h3 Tags
      -if @image.tags
        -@image.tags.each do |tag|
          %span.badge=link_to tag.name, '#'
