%html
  %head
    <script type="text/javascript">var _sf_startpt=(new Date()).getTime()</script>
    %title
      -if content_for? :title
        =content_for :title 
        Â»
      Jammin' Java
    = stylesheet_link_tag    "application", :media => "all"
    = csrf_meta_tags
    =raw '<!-- current subdomain ' + @current_account.subdomain + '-->'
    :css
      [class^="icon-"],[class*=" icon-"] {
        background-image:url("../img/glyphicons-halflings.png")
      }
      .icon-white{background-image:url("../img/glyphicons-halflings-white.png");}
      
      
    =render 'front/shared/theme'
  
  
  %body
    #wrap
      .container
        .row
          #header.span12
            =render 'shared/header'
    
        .nav
          %ul 
            %li=link_to 'Calendar', '/calendar', :class => 'highlighted'
            %li=link_to 'Lobby Bar', '/lobby-bar'
            %li=link_to 'Kids Shows', '/kids-shows'
            %li=link_to 'Private Events', '/private-events'
            %li=link_to 'Food / Drink', '/food-drink'
            %li=link_to 'Music Lessons', 'http://themusicschoolonline.com/', :target => '_blank'
            %li=link_to 'Store', '/store'
            %li=link_to 'The Story', '/about', :class => 'highlighted'        
            %li=link_to 'Brindley Brothers Present', '/brindley-bros-present'

        -unless notice.blank?
          .container
            %p.alert= notice
          
        -unless alert.blank?          
          .container
            %p.alert= alert
          
        .container

          -if (content_for?(:layout) == true)
            =yield(:layout)

              
              
    
    
    = javascript_include_tag "application"
    =yield :javascript if content_for?(:javascript)
    :javascript

      $(function(){
        Tix.init();
      });
    
    =yield :javascript_after_init if content_for?(:javascript_after_init)
    -if ENV['RAILS_ENV'] == 'production'
      :plain
        <script type="text/javascript">
          var _sf_async_config = { uid: 25784, domain: 'jamminjava.thintix.com' };
          (function() {
            function loadChartbeat() {
              window._sf_endpt = (new Date()).getTime();
              var e = document.createElement('script');
              e.setAttribute('language', 'javascript');
              e.setAttribute('type', 'text/javascript');
              e.setAttribute('src',
                (("https:" == document.location.protocol) ? "https://a248.e.akamai.net/chartbeat.download.akamai.com/102508/" : "http://static.chartbeat.com/") +
                "js/chartbeat.js");
              document.body.appendChild(e);
            };
            var oldonload = window.onload;
            window.onload = (typeof window.onload != 'function') ?
              loadChartbeat : function() { oldonload(); loadChartbeat(); };
          })();
        </script>