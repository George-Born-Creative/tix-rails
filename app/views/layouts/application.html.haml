!!!
%html
  %head
    %title Jammin' Java
    = stylesheet_link_tag    "application", :media => "all"
    = csrf_meta_tags
    -unless ENV['RAILS_ENV'] == 'production'
      //<script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>
    <script type="text/javascript" src="//use.typekit.net/lmc2sec.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    =raw '<!-- current subdomain ' + @current_account.subdomain + '-->'
  %body
    .container
      #header.columns.sixteen
    
        =render 'shared/header'
        
    .container
      .nav
        %ul 
          %li=link_to 'Calendar', '/#/event', :class => 'highlighted'
          %li=link_to 'Artists', '/#/artists', :class => 'highlighted'        
          %li=link_to 'Home', '/#/'
          %li=link_to 'Kids Shows', '/#/'
          %li=link_to 'Private Events', '/#/'
          %li=link_to 'Lobby Bar', '/#/lobby_bar'
          %li=link_to 'Store', '/#/'
          %li=link_to 'Music Lessons', 'http://themusicschoolonline.com/', :target => '_blank'
          %li=link_to 'Contact Us', '/#/contact'
          
      #modules
        .event_chart
        .event_cart
        .event_checkout
  
    
  
    = yield
    
    <script src="http://js.pusher.com/1.11/pusher.min.js" type="text/javascript"></script>
    
    = javascript_include_tag "application"
    :javascript
      $(function(){
        Tix.init( {
          events: #{ render('events/events', :object => @events, :format => :json) },
          pusherAPIKey: "#{Pusher.key}",
          env: "#{ENV['RAILS_ENV']}"}  );
      });