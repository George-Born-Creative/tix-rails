.row
  .span12
    .widget.big-stats-container
      .widget-content
        #big_stats.cf
          .stat
            %h4 Today
            %span.value{:style => 'font-size: 2.3em;'}=Time.zone.today

          .stat
            %h4 Current Events
            %span.value=@current_account.events.count

          .stat
            %h4 Sales Today
            %span.value= number_to_currency @current_account.orders.purchased_today.sum('total').to_s

          .stat
            %h4 Sales All Time
            %span.value= number_to_currency @current_account.orders.sum('total').to_s

.row
  .span3
    =render 'day_nav'

  .span9
    .widget
      .widget-header
        %h3 By Show
      .widget-content
        .row
          .span3
            %span.badge=link_to 'On the Books', '/manager/reports?time=current'
            %span.badge=link_to 'Historical', '/manager/reports?time=historical'
        
        
          .span1
            %h5
              %i.icon-list-alt{:style => 'zoom: 100%'}
          
          .span4  
            %h5
              %i.icon-check{:style => 'zoom: 100%'}
      
    
        %hr/
  
        -@events.each do |event|
          -if event.tickets.complete.count > 0
            .row
              .span1
                =event.headliner.photo(:thumb) if !event.headliner.blank? && event.headliner.photo?
              .span4
                %strong=event.title
                =event.starts_at.to_formatted_s(:shorty)
                %br/
                %br/
              .span1
                ="#{event.tickets.checked_in.count} / #{event.tickets.complete.count}"
                %br/
                %span{:style => 'color: #ccc'}
                  ="#{(event.tickets.checked_in.count.to_f / event.tickets.complete.count.to_f * 100).to_i}%"

              .span3
                -if event.tickets.complete.count > 0
                  %span.badge.badge-info=link_to 'Details', "/manager/reports/event_sales/#{event.id}"
                -else
                  &nbsp;
                %span.badge.badge-warning=link_to 'Edit', edit_event_path(event)
                %span.badge.badge-success=link_to 'View', front_event_path(event)
 
        
          